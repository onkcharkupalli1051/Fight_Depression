<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FinalActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_margin="20dp"
    >

  <ImageView
      android:layout_width="200dp"
      android:layout_height="200dp"
      android:id="@+id/idActivityMainLogo"
      app:srcCompat="@drawable/logo"
      android:layout_marginTop="100dp"
      />

  <TextView
      android:id="@+id/idActivityFinalLogoText"
      style="@style/TextAppearance.AppCompat.Title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:fontFamily="@font/carter_one"
      android:text="Fight Depression"
      android:textColor="@color/black"
      android:textSize="30dp" />

  <TextView
      android:id="@+id/idActivityFinalLogoText3"
      style="@style/TextAppearance.AppCompat.Title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:fontFamily="serif"
      android:text=""
      android:textColor="@color/black"
      android:textSize="20dp" />

  <TextView
      android:id="@+id/idActivityFinalLogoText2"
      style="@style/TextAppearance.AppCompat.Title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:fontFamily="serif"
      android:text="Thank You For Using The App."
      android:textColor="@color/black"
      android:textSize="20dp" />
</LinearLayout>