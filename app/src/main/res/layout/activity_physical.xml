<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".physicalActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_margin="5dp"
    >

    <TextView
        android:id="@+id/idActivityPhysicalLogoText"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/carter_one"
        android:text="Engage In Physical Activity"
        android:textColor="@color/black"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/idActivityPhysicalText1"
        style="@style/TextAppearance.AppCompat.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/passion_one"
        android:text="Involving In Physical Activity improves mental health."
        android:textColor="@color/black"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/idActivityPhysicalText2"
        style="@style/TextAppearance.AppCompat.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/passion_one"
        android:text="If youâ€™re currently inactive, start with gentle activities such as walking or biking."
        android:textColor="@color/black"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <pl.droidsonroids.gif.GifImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/gifwalk"
            android:layout_weight="1"/>
        <!--        android:background="@drawable/bg_anim"-->

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="200dp"
            android:src="@drawable/biking"
            android:padding="30dp"
            />
        <!--        android:background="@drawable/bg_anim"-->
    </LinearLayout>

    <TextView
        android:id="@+id/idActivityPhysicalTIMER"
        style="@style/TextAppearance.AppCompat.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/passion_one"
        android:text="05:00"
        android:textColor="@color/black"
        android:textSize="80dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="40dp"
        android:paddingLeft="40dp"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start"
            android:textSize="16dp"
            android:id="@+id/idActivityPhysicalStart"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:textSize="16dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/idActivityPhysicalReset"
            android:layout_weight="1"
            android:visibility="invisible"
            tools:visibility="visible"
            />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skip To Next Task"
        android:textSize="16dp"
        android:id="@+id/idActivityPhysicalSkip"
        />
</LinearLayout>