<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BreatheActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_margin="5dp"
    >

    <TextView
        android:id="@+id/idActivityBreatheLogoText"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/carter_one"
        android:text="Take A Deep Breath"
        android:textColor="@color/black"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/idActivityPhysicalText1"
        style="@style/TextAppearance.AppCompat.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/passion_one"
        android:text="If you start to get a faster heartbeat or sweating palms, the best thing is not to fight it.
                Stay where you are and simply feel the panic without trying to distract yourself."
        android:textColor="@color/black"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/idActivityBreatheText2"
        style="@style/TextAppearance.AppCompat.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/passion_one"
        android:text="Place the palm of your hand on your stomach and breathe slowly and deeply.
The goal is to help the mind get used to coping with panic, which takes the fear of fear away."
        android:textColor="@color/black"
        android:textSize="20dp" />

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@drawable/breathe"
        />

    <TextView
        android:id="@+id/idActivityBreatheTIMER"
        style="@style/TextAppearance.AppCompat.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/passion_one"
        android:text="05:00"
        android:textColor="@color/black"
        android:textSize="80dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="40dp"
        android:paddingLeft="40dp"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start"
            android:textSize="16dp"
            android:id="@+id/idActivityBreatheStart"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:textSize="16dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/idActivityBreatheReset"
            android:layout_weight="1"
            android:visibility="invisible"
            tools:visibility="visible"
            />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skip To Next Task"
        android:textSize="16dp"
        android:id="@+id/idActivityBreatheSkip"
        />
</LinearLayout>