<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".shareEmotion" android:orientation="vertical"
    android:layout_margin="5dp"
    android:gravity="center_horizontal"
    >

    <TextView
        android:id="@+id/idActivityShareLogoText"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/carter_one"
        android:text="Share Your Emotions"
        android:textColor="@color/black"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/idActivityShareText1"
        style="@style/TextAppearance.AppCompat.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/passion_one"
        android:text="Sharing your feelings helps you release the emotions you have pent up inside. There is always help and support out there when you need it"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/share"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/idActivityShareTIMER"
        style="@style/TextAppearance.AppCompat.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/passion_one"
        android:text="05:00"
        android:textColor="@color/black"
        android:textSize="80dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="40dp"
        android:paddingLeft="40dp"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start"
            android:textSize="16dp"
            android:id="@+id/idActivityShareStart"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:textSize="16dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/idActivityShareReset"
            android:layout_weight="1"
            android:visibility="invisible"
            tools:visibility="visible"
            />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skip To Next Task"
        android:textSize="16dp"
        android:id="@+id/idActivityShareSkip"
        />
</LinearLayout>